<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/open_settings_background">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

            <TextView
                android:layout_width="263dp"
                android:layout_height="66dp"
                android:layout_margin="4dp"
                android:singleLine="false"
                android:text="@string/open_app_settings"
                android:textColor="@color/open_settings_text"
                android:textSize="20sp" />

            <Button
                android:id="@+id/open_settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="end"
                android:text="@string/open_settings_button" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="263dp"
                android:layout_height="66dp"
                android:layout_margin="4dp"
                android:singleLine="false"
                android:text="@string/open_app_settings"
                android:textColor="@color/open_settings_text"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="end"
                android:text="@string/open_settings_button" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>